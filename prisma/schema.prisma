generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  log      = ["query", "info", "warn", "error"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  apiKeys   Json?
  // bots      Bot[]
  createdAt DateTime @default(now())
}

